# flask
PORT=5003
FLASK_RUN_PORT=5003
FLASK_DEBUG=false
LOG_LEVEL=INFO

# sqlite
DATABASE_URL=sqlite:///nocom.db

# data provider
DATA_PROVIDER=yahoo
DAILY_SYMBOLS=SPY,QQQ,IWM,TLT,GLD
TIMEFRAME=1d
YAHOO_RETRY_ATTEMPTS=3
YAHOO_RETRY_BACKOFF_SECONDS=1.5

# poller
POLL_SECONDS=600
UNIVERSE_REFRESH_SECONDS=1800
DAILY_LOOKBACK_DAYS=1825
DAILY_BACKFILL_DAYS=420
DAILY_PATCH_BUFFER_DAYS=7
REQUIRED_TRADING_DAYS=520
FORECAST_LOOKBACK_DAYS=504
FORECAST_HORIZON_DAYS=5
FORECAST_MIN_SAMPLES=60

# optional lightweight intraday mode (Yahoo 1m, rolling provider window)
INTRADAY_ENABLED=false
INTRADAY_SYMBOLS=SPY,QQQ,IWM,TLT,GLD
INTRADAY_LOOKBACK_DAYS=7

# optional alerts link base (used only for legacy alert payload links)
NOCOM_BASE_URL=http://localhost:5003
